{
  "name": "todo-list",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "predev": "npm run services:up && npm run services:wait-for-db && npm run migrations:up",
    "dev": "node infra/scripts/start-development.js",
    "pretest": "npm run services:up && npm run services:wait-for-db",
    "test": "concurrently -n next,jest --success command-jest -k --hide next \"next dev\" \"npx jest --runInBand --forceExit\"",
    "posttest": "npm run services:down",
    "test:watch": "jest --runInBand --watchAll",
    "premigrations:create": "npm run services:up && npm run services:wait-for-db",
    "migrations:create": "npx prisma migrate dev --config infra/database/prisma.config.ts",
    "postmigrations:create": "npx prisma generate --config infra/database/prisma.config.ts",
    "migrations:up": "npx prisma migrate deploy --config infra/database/prisma.config.ts",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait-for-db": "node infra/scripts/wait-for-db.js",
    "lint:eslint:check": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "db:view": "prisma studio --config infra/database/prisma.config.ts -p 5050"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "dotenv": "^17.2.3",
    "next": "^16.0.3",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@types/async-retry": "^1.4.9",
    "@types/jest": "^30.0.0",
    "@types/node": "24.10.1",
    "@types/pg": "^8.15.6",
    "@types/react": "19.2.6",
    "async-retry": "^1.3.3",
    "concurrently": "^9.2.1",
    "dotenv-expand": "^12.0.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "eslint-plugin-jest": "^29.2.0",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "prisma": "^7.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
